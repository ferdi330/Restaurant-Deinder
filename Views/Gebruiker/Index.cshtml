@model IEnumerable<User>
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Gebruiker Lijst </h2>
    </div>
</div>
<div class="p-4 border rounded">
    @if (Model.Count() > 0)
    {
        <table id="customers">
            <tr class="">
                <th>
                    Id
                </th>
                <th>
                    Email
                </th>
                <th>
                    Naam
                </th>
                <th>
                    Role/Rechten
                </th>
                <th>Bewerk of Verwijder</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Email
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Role
                    </td>
                    <td>
                        <div class="text-center">
                            <form asp-action="Delete" asp-route-userId="@item.Id">
                                <a asp-action="Edit" asp-route-userId="@item.Id" class="btn btn-info text-white" style="cursor:pointer">
                                    Bewerk Role
                                </a>


                                <button type="submit" onclick="return confirm('Are you sure you want to delete this?')"
                                class="btn btn-danger">
                                    Verwijder
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </table>
    }
</div>