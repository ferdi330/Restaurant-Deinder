@model IEnumerable<D_Einder_MVC.Models.Reserveringen>

@{
    ViewData["Title"] = "Index";
}
<hr />

<h1 class="text-info">Tafels - Hoofdpagina</h1>
<hr />



<br />


<hr />


<p class="text-xl-center"><a asp-controller="Tafels" asp-action="Create" class="btn btn-success">Voeg Tafel</a><p>

    <hr />



    <div class="flex-container-tafel">
            @foreach (var item in Model)
            {
            <div class="flex-item">
                <a asp-controller="Reserveringens" asp-action="Details" class="btn btn-light" asp-route-id="@item.Id">Details @Html.DisplayFor(modelItem => item.Naam)</a> |
                <br /><br />
                <a asp-action="Edit" asp-controller="Reserveringens" class="btn btn-primary" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-controller="Reserveringens" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
            </div>

            }
    </div>
